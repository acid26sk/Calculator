<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ds_stamper</item>
        <item name="backgroundTint">@color/btn_numb</item>
        <item name="android:textSize">@dimen/txt_size_one</item>
        <item name="android:layout_marginEnd">@dimen/mrg_five</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/btn_text_numb</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/rad</item>
        <item name="android:padding">0dp</item>
        <item name="strokeWidth">@dimen/stroke</item>
    </style>

    <style name="Button.Operations">
        <item name="backgroundTint">@color/btn_oper</item>
        <item name="android:textColor">@color/btn_text_oper</item>
    </style>

    <style name="ThemesDay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="materialButtonStyle">@style/Button</item>
        <item name="android:windowBackground">@drawable/bgd_day</item>
    </style>

    <style name="ThemesNight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="materialButtonStyle">@style/Button.Operations</item>
        <item name="android:windowBackground">@drawable/bgd_night</item>
    </style>



</resources>